<?xml version="1.0" encoding="utf-8"?>
<!--this layout for recycler view-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    app:cardBackgroundColor="#FAFAFA"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/Country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country Name"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingStart="30dp"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Country_name">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Infected Cases"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:drawablePadding="6dp"

                    />
                <TextView
                    android:id="@+id/cases__RS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:paddingStart="10dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    />


            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Infected Cases"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:drawablePadding="6dp"

                    />
                <TextView
                    android:id="@+id/NewCases_RS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:paddingStart="10dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    />


            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Deaths Cases"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:drawablePadding="6dp"

                    />
                <TextView
                    android:id="@+id/TotalDeaths_RS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

            </TableRow>


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Deaths Cases"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:drawablePadding="6dp"
                    />
                <TextView
                    android:id="@+id/NewDeath_RS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />


            </TableRow>


            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Recovered Cases"
                    android:textColor="@color/purple_500"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:drawablePadding="6dp"
                    />
                <TextView
                    android:id="@+id/TotalRecovered_RS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/purple_500"
                    android:textStyle="bold"
                    />


            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Recovered Cases"
                    android:textColor="@color/purple_500"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:drawablePadding="6dp"
                    />
                <TextView
                    android:id="@+id/NewRecovered_RS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="15dp"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:textColor="@color/purple_500"
                    android:textStyle="bold"
                    />


            </TableRow>


        </TableLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>